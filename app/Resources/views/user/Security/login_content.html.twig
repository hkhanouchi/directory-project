{% if error %}
    <div class="alert alert-danger alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-ban"></i> {{ error.messageKey|trans(error.messageData, 'security') }}</h4>
    </div>
{% endif %}



<div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Annuaire</b>Projets</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Connectez vous pour accéder à votre dashboard</p>

            <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

                <div class="form-group has-feedback">
                    <input type="text" class="form-control" placeholder="Utilisateur" id="username" name="_username" value="{{ last_username }}" required="required"/>
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" id="password" name="_password" required="required" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-7">
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                                {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                            </label>
                        </div>
                    </div><!-- /.col -->
                    <div class="col-xs-5">
                        <button type="submit" id="_submit" name="_submit" value="" class="btn btn-primary btn-block btn-flat" >{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</button>
                    </div><!-- /.col -->
                </div>
            </form>

            <a href="{{ path("app_user_resetting_request") }}">{{ 'resetting.reset.forget_password'|trans({}, 'messages') }}</a><br>

        </div><!-- /.login-box-body -->
    </div>