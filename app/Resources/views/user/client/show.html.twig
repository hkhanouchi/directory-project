{% extends ':layout:base-layout.html.twig' %}

{% block title %}AnnuaireProjets - Clients{% endblock %}

{% block page_title %}Client {% endblock %}
{% block page_subtitle %}{{ 'customer.index.customer'|trans({}, 'messages') }}{% endblock %}

{% block page_content %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Client</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <th>User(s)</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.name }}</td>
                    <td>{{ client.email }}</td>
                    <td>{{ client.contact }}</td>
                    <td>
                        {% for user in client.users %}
                            - {{ user.firstname }} {{ user.lastname }} {% if not loop.last %} <br/> {% endif %}
                        {% endfor %}
                    </td>
                </tr>
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="4">
                        <div class="btn-group">
                            <a href="{{ path('client_index') }}" class="btn btn-info">Back to the list</a>
                            <a href="{{ path('client_edit', { 'id': client.id }) }}" class="btn btn-success">Edit</a>
                            {{ form_start(delete_form) }}
                            <input type="submit" value="Delete" class="btn btn-danger">
                            {{ form_end(delete_form) }}
                        </div>
                    </td>
                </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
