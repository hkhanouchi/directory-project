{% extends ':layout:base-layout.html.twig' %}

{% block title %}AnnuaireProjets - Projets{% endblock %}

{% block page_title %}{% endblock %}
{% block page_subtitle %}{{ 'project.index.edit_project'|trans({}, 'messages') }}{% endblock %}

{% block page_content %}

    <a href="{{ path('project_index') }}" class="btn btn-primary btn-sm mB-2">Retour</a>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">{{ 'project.index.edit_project'|trans({}, 'messages') }}</h3>
        </div>
        <div class="box-body">
            {{ form_start(edit_form) }}
            {{ form_widget(edit_form) }}
            <input type="submit" value="Save" class="btn btn-primary btn-sm pull-left mR-1"/>
            {{ form_end(edit_form) }}

            {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-sm btn-danger"/>
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
